@{
    ViewData["Title"] = "Home Page";
    
    Layout = null;
}
@using Bbsm_Garage_Son.Models;
@model LoginModel

<head>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <title>BBSM Garage - Giriş Yap</title>
    <link rel="icon" href="/bbsm.ico" /> 
</head>
<div class="w-full h-200">
    <img src="~/images/home.jpg" class="w-full object-center object-cover max-h-screen" alt="logo" />
      <div class="absolute inset-0 flex items-center justify-center">
        <form action="/Home/Login" method="post" class="bg-my-siyah border-2 border-my-4b4b4bgri bg-opacity-50 backdrop-blur-sm p-8 rounded-3xl shadow-lg max-w-sm w-full flex flex-col items-center justify-center">
          <h1 class="font-extrabold text-transparent text-3xl bg-clip-text bg-gradient-to-r from-blue-400 via-blue-900 to-red-600">Hoş Geldiniz!</h1>
          <h2 class="text-2xl font-bold text-my-beyaz mb-4 text-center">Giriş Yapınız</h2>
          <p class="w-full font-semibold p-2 text-my-beyaz text-left">Kullanıcı Adı</p>
          <input class="w-full p-2 mb-4 rounded-xl border bg-my-siyah border-gray-500 text-my-beyaz" type="text" placeholder="Kullanıcı Adı Giriniz..." name="Mail" id="email"/>
          <p class="w-full font-semibold p-2 text-my-beyaz text-left">Şifre</p>
          <input class="w-full p-2 mb-6 rounded-xl border bg-my-siyah border-gray-500 text-my-beyaz" type="password" name="password" id="Password" placeholder="Şifre Giriniz..."  />
          <div class="w-full text-center flex gap-4">
            <button href="/Kayit" class="w-1/2 p-2 mr-2 font-semibold rounded-xl border-2 border-my-4b4b4bgri bg-my-siyah transition duration-500 ease-in-out hover:bg-my-4b4b4bgri"><p class="font-extrabold text-transparent text-lg bg-clip-text bg-gradient-to-r from-my-beyaz to-my-açıkgri">Kayıt Ol</p></button>
            <button type="submit" class="w-1/2 p-2 ml-2 font-semibold rounded-xl border-2 border-my-4b4b4bgri bg-my-siyah text-my-beyaz transition duration-500 ease-in-out hover:bg-my-4b4b4bgri"><p class="font-extrabold text-transparent text-lg bg-clip-text bg-gradient-to-r from-blue-400 to-blue-900">Giriş Yap</p></button>
          </div>
          <div class="w-full text-center mt-4">
            <button href="" class="w-full p-2 mr-2 font-semibold rounded-xl border-2 border-my-4b4b4bgri bg-my-siyah transition duration-500 ease-in-out hover:bg-my-4b4b4bgri">
